extends layout

block content
  .main-container.text-center(style="height: 100%; padding: 50px 10px 0 10px;")
    h1.noto.greeting-text Apply Ointment
    img(src="/images/alarm/ointment.png", style="margin-top: 30px; width: 25%; height: auto; ")
    h2.noto.greeting-text#time(style="margin-top: 30px;")
    a(href="/")
      button.roboto(style="font-size: 18px; width: 100%; height: 40px; background: #61605B; color: #F7F7F7; border: none; margin-top: 120px;") CHECK
    a(href="/settings")
      button.roboto(style="font-size: 18px; width: 100%; height: 40px; background: #61605B; color: #F7F7F7; border: none; margin-top: 15px;") Change Setting

    script(type="text/javascript", src="/javascripts/triggerAlarm.js")
