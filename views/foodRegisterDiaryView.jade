extends layout

block content
  .main-container
    .row
      .col-xs-12
        input.datepicker.text-center.noto.form-input(type="text", style="width: 100%", placeholder="날짜 선택")
    .row(style="margin-top: 20px;")
      .col-xs-12
        .styled-select
          select(style="width: 100%")
            option 아침
            option 점심
            option 저녁
    .row(style="margin-top: 20px;")
      .col-xs-12
        input.noto.form-input(type="text", style="width: 100%;", placeholder="음식 입력")
    .row(style="margin-top: 30px;")
      .col-xs-12
        textarea.noto.form-textarea.boxsizingBorder(rows="8", cols="30", placeholder="다이어리를 입력해주세요.", style="width: 100%;")
    .row(style="margin-top: 20px;")
      .col-xs-12
        a(href="/schedule")
          button.roboto(style="font-size: 18px; width: 100%; height: 40px; background: #61605B; color: #F7F7F7; border: none;") SUBMIT

    script(src="/javascripts/pickadate/translations/ko_KR.js")
    script(src="/javascripts/pickadate/run.js")
